# homeTeam Mobile App Environment Variables Template
# Bu dosyayı kopyalayıp .env.local olarak kaydedin

# API Configuration
API_BASE_URL=http://localhost:3001/api
WEBSOCKET_URL=ws://localhost:3001

# Firebase Configuration (Opsiyonel - Push notifications için)
ENABLE_FIREBASE=false
FIREBASE_PROJECT_ID=hometeam-mobile-app

# Google Sign-In Configuration
GOOGLE_WEB_CLIENT_ID=your_google_client_id_here

# Development/Debug Settings
DEBUG_MODE=true
LOG_LEVEL=debug
API_TIMEOUT=10000

# Platform Specific URLs (Override for testing)
# Android Emulator: 10.0.2.2
# iOS Simulator: localhost
ANDROID_API_URL=http://10.0.2.2:3001/api
IOS_API_URL=http://localhost:3001/api

# Test User Credentials (Development Only)
