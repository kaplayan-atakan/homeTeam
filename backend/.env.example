# Veritabanı Konfigürasyonu
MONGODB_URI=mongodb://localhost:27017/hometeam
REDIS_URL=redis://localhost:6379

# JWT Ayarları
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=7d

# OAuth Ayarları (Google)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_WEB_CLIENT_ID=your-google-web-client-id.apps.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your-google-ios-client-id.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-google-android-client-id.apps.googleusercontent.com

# OAuth Ayarları (Facebook)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Spotify API
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key

# Uygulama Ayarları
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Bildirim Ayarları
PUSH_NOTIFICATION_KEY=your-push-notification-key

# E-posta Ayarları (opsiyonel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
